@model IEnumerable<FishingHunting.Models.Fishing>

@{
    ViewData["Title"] = "Index";
}

<h1>Fishing items list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Fishing" asp-action="Index" method="get">
    <p>
        Search by Type or Name:
        <input type="text" name="searchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.FishingProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FishingProductType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.FishingProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FishingProductType)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
