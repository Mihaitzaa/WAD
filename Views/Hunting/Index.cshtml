@model IEnumerable<FishingHunting.Models.Hunting>

@{
    ViewData["Title"] = "Index";
}

<h1>Huting items list</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Hunting" asp-action="Index" method="get">
    <p>
        Search by Type or Name:
        <input type="text" name="searchString" />
        <input type="submit" value="Search" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.HuntingProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HuntingProductType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.HuntingProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HuntingProductType)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
